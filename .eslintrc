{
  "parser": "babel-eslint",
  "extends": "airbnb/base",
  "plugins": [
    "vue"
  ],
  "rules": {
    "no-underscore-dangle": "off",
    "class-methods-use-this": "off",
    "no-param-reassign": [2, { "props": false }],
    "no-console": [2, { "allow": ["warn", "error"] }]
  },
  "globals": {
    "expect": true,
    "before": true,
    "it": true,
    "describe": true,
    "after": true,
    "afterAll": true,
    "beforeEach": true,
    "afterEach": true
  }
}
